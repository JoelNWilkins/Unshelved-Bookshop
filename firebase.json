{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "destination": "**",
        "source": "**"
      }
    ],
    "trailingSlash": false
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        ".env",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ],
  "emulators": {
    "singleProjectMode": true,
    "functions": {
      "host": "127.0.0.1",
      "port": 5000
    },
    "hosting": {
      "port": 8080
    },
    "ui": {
      "enabled": false
    }    
  }
}
